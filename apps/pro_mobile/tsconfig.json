{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@hooks/*": ["./src/hooks/*"],
      "@hooks": ["./src/hooks"],
      "@components/*": ["./src/components/*"],
      "@components": ["./src/components"],
      "@screens/*": ["./src/screens/*"],
      "@screens": ["./src/screens"],
      "@lib/*": ["./src/lib/*"],
      "@lib": ["./src/lib"],
      "@repo/monitoring/sentry": [
        "../../packages/monitoring/src/sentry/index.ts"
      ],
      "@repo/monitoring/logger": [
        "../../packages/monitoring/src/logger/index.ts"
      ],
      "@infra/*": ["../api/src/server/infrastructure/*"],
      "@modules/*": ["../api/src/server/modules/*"],
      "@shared/*": ["../api/src/server/shared/*"],
      "@/server/*": ["../api/src/server/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"],
  "exclude": ["node_modules", "../api/**/*"]
}
