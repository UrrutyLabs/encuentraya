# Database connnection
DATABASE_URL="your-database-pool-connection"
# Supabase Configuration
# Get these values from your Supabase project dashboard: https://app.supabase.com
# Settings → API → Project URL and Secret Key
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-secret-key-here
# Note: The secret key (formerly "service role key") has admin privileges and should NEVER be exposed to the client.
# Only use it in server-side code (like this API app).
# This key bypasses Row Level Security (RLS) policies.
MERCADOPAGO_ACCESS_TOKEN="your-mercadopago-access-token"
# Mercado Pago Webhook Secret (optional but recommended for production)
# Used to verify webhook signatures for security
# Get it from Mercado Pago dashboard → Webhooks → Configure webhook → Secret
MERCADOPAGO_WEBHOOK_SECRET="your-mercadopago-webhook-secret"
# Client App URL (required for payment return URLs)
# This is the URL where the client app is hosted
# In development: http://localhost:3000 (client app runs on port 3000)
# In production: https://arreglatodo.com (or your production client URL)
CLIENT_URL="http://localhost:3000"
# Twilio WhatsApp
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_WHATSAPP_FROM_NUMBER="whatsapp:+14155238886"
# SendGrid Email
SENDGRID_API_KEY="your-sendgrid-api-key"
SENDGRID_FROM_EMAIL="test@example.com"

# Contact Form Configuration
# Email address where contact form submissions will be sent
# Falls back to SUPPORT_EMAIL if not set, then to support@arreglatodo.com
ADMIN_EMAIL="admin@example.com"
SUPPORT_EMAIL="support@example.com"

# Upstash Redis (for rate limiting)
# Optional: If not configured, rate limiting will use in-memory storage (not suitable for production with multiple instances)
# Get these values from: https://console.upstash.com/
UPSTASH_REDIS_REST_URL="https://your-redis-instance.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-upstash-redis-token"

# CORS Configuration
# Comma-separated list of allowed origins for CORS requests
# If not set, defaults to "*" (allow all origins) - suitable for development
# For production, specify exact origins:
CORS_ALLOWED_ORIGINS="https://example.com,https://www.example.com"

# OpenAI (optional) – chat message violation detection
# If set, GPT is used to classify contact-info violations; on API failure or when unset, regex fallback is used.
# Get your key from https://platform.openai.com/api-keys (same account as ChatGPT Plus; API usage is billed separately)
# OPENAI_API_KEY="sk-..."
